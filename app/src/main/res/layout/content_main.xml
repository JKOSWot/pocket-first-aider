<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jake.myapplication.MainActivity"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/home_launcher"
        android:layout_width="250dp"
        android:layout_height="187dp"
        android:src="@drawable/home_launcher"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn First Aid"
        android:id="@+id/InButton"
        android:width="175dp"
        android:height="175dp"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:textSize="12pt"
        android:onClick="GoToInstructions"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near You"
        android:id="@+id/AmButton"
        android:width="175dp"
        android:height="175dp"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:textSize="12pt"
        android:onClick="GoToAmenities"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/InButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency"
        android:id="@+id/EmButton"
        android:width="175dp"
        android:height="175dp"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:textSize="12pt"
        android:onClick="GoToEmergency"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:layout_below="@+id/InButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Things you need"
        android:id="@+id/ToolsButton"
        android:width="175dp"
        android:height="175dp"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:textSize="12pt"
        android:onClick="GoToTools"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/EmButton"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
