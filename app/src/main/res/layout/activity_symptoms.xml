<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jake.myapplication.SymptomsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Symptoms"
        android:id="@+id/sympText"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/sumText"
        android:layout_toEndOf="@+id/sumText"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textColor="#2db92d"
        android:textStyle="bold"
        android:onClick="GoToSymptoms"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary"
        android:id="@+id/sumText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textColor="#2db92d"
        android:textStyle="bold"
        android:onClick="GoToSummary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Symptoms"
        android:id="@+id/symTitle"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/sumText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/allergySymptomsMild"
        android:textSize="8pt"
        android:layout_marginTop="50dp"
        android:text="Mild Symptoms:
        \n &#8226; Skin Rash
        \n &#8226; Hives
        \n &#8226; Runny Nose
        \n &#8226; Itchy Eyes
        \n &#8226; Nausea
        \n &#8226; Stomach Cramping"
        android:layout_below="@+id/symTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/list_selector_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/allergySymptomsSevere"
        android:textSize="8pt"
        android:text="Severe Symptoms:
        \n &#8226; Swelling which can spread to throat and lungs
        \n &#8226; Allergenic Asthma or Anaphylaxis"
        android:layout_below="@+id/allergySymptomsMild"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/list_selector_color"/>

</RelativeLayout>
