<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jake.myapplication.InstructionsActivity"
    tools:showIn="@layout/activity_instructions">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Allergies"
                android:text="Allergies/Anaphylaxis"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToAllergiesSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Asthma"
                android:text="Asthma Attack"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToAsthmaSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Bleeding"
                android:text="Bleeding heavily"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToBleedingSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Bone"
                android:text="Broken Bone"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToBrokenBoneSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Burns"
                android:text="Burns"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToBurnsSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Choking"
                android:text="Choking"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToChokingSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Dehydration"
                android:text="Dehydration"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToDehydrationSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Diabetes"
                android:text="Diabetes"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToDiabetesSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Distress"
                android:text="Distress"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToDistressSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Head"
                android:text="Head Injury"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToHeadInjurySummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Heart"
                android:text="Heart Attack"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToHeartAttackSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Hypothermia"
                android:text="Hyperthermia"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToHyperthermiaSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Hyperthermia"
                android:text="Hypothermia"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToHypothermiaSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Meningitis"
                android:text="Meningitis"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToMeningitisSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Poisoning"
                android:text="Poisoning"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToPoisoningSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Seizures"
                android:text="Seizures/Epilepsy"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToSeizuresSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Sprains"
                android:text="Sprains and Strains"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToSprainsSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/Stroke"
                android:text="Stroke"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToStrokeSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/unRespBreath"
                android:text="Unresponsive and breathing"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToUnresponsiveBreathingSummary"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/unRespNotBreath"
                android:text="Unresponsive and not breathing"
                android:textSize="8pt"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:onClick="GoToUnresponsiveNotBreathingSummary"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText3"
        android:text="Please chose from the following list to learn the First Aid for the emergency. Scroll for more!"
        android:width="1000dp"
        android:textSize="10pt"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:editable="false"/>

</RelativeLayout>
