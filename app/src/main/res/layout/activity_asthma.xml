<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jake.myapplication.AsthmaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Symptoms"
        android:id="@+id/asthmaSympText"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/sumText"
        android:layout_toEndOf="@+id/sumText"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textColor="#2db92d"
        android:textStyle="bold"
        android:onClick="GoToAsthmaSymptoms"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary"
        android:id="@+id/sumText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textColor="#2db92d"
        android:textStyle="bold"
        android:onClick="GoToAsthmaSummary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Summary"
        android:id="@+id/sumTitle"
        android:layout_below="@+id/sumText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_below="@+id/sumTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:text="This is the procedure you should follow in the event of an Asthma Attack."
        android:layout_alignParentEnd="true"
        android:textSize="10pt"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Help the person sit in a comfortable position and take their medication."
        android:id="@+id/textView"
        android:background="@drawable/list_selector_color"
        android:textSize="8pt"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/editText6"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="82dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reassure the person. If the attack becomes severe, or they don't have their medication, call 999 or get somone else to do it."
        android:id="@+id/textView3"
        android:background="@drawable/list_selector_color"
        android:layout_marginBottom="64dp"
        android:textSize="8pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/numbered_1"
        android:id="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/numbered_2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

</RelativeLayout>
