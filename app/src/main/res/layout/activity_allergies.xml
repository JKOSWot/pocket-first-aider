<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jake.myapplication.AllergiesActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Symptoms"
        android:id="@+id/sympText"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/sumText"
        android:layout_toEndOf="@+id/sumText"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textColor="#2db92d"
        android:textStyle="bold"
        android:onClick="GoToSymptoms"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary"
        android:id="@+id/sumText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textColor="#2db92d"
        android:textStyle="bold"
        android:onClick="GoToSummary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Summary"
        android:id="@+id/sumTitle"
        android:layout_below="@+id/sumText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText6"
        android:textSize="10pt"
        android:layout_below="@+id/sumTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:text="This is the procedure you should follow in the event of an Allergic Reaction."
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The person may develop symptoms. Their breathing may slow down."
        android:id="@+id/textView"
        android:layout_marginTop="27dp"
        android:background="@drawable/list_selector_color"
        android:layout_below="@+id/editText6"
        android:layout_alignEnd="@+id/editText6" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Call 999 when you observe the symptoms."
        android:id="@+id/textView3"
        android:background="@drawable/list_selector_color"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Give constant reassurance until help arrives. Try to investigate what the cause may be."
        android:id="@+id/textView4"
        android:layout_marginBottom="99dp"
        android:background="@drawable/list_selector_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:src="@drawable/numbered_1"
       android:layout_alignBottom="@+id/textView"
       android:layout_alignParentStart="true"
       android:layout_alignTop="@+id/textView"
       android:layout_toStartOf="@+id/textView"
       android:id="@+id/imageView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/numbered_2"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="104dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/numbered_3"
        android:layout_alignTop="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        android:id="@+id/imageView2" />

</RelativeLayout>
